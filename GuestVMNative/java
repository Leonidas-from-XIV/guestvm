# Guest VM is a Java virtual machine, so we provide a "java" launch command.
# However, some users may find the "run" command easier to work with.
# TODO: Support the full set of standard options

classpath="/guestvm/image/GuestVM/bin"
vmargs=""
xtra_args=""
jar=""
vmalloc="-XX:+UseVirtualMemory"

function vm_args() {
    shift
    if [ "$vmargs" = "" ] ;
    then
      vmargs="$1"
    else
      vmargs="$vmargs $1"
    fi
    shift
}

while [ "$1" != "" ] ;
do
  case "$1" in
    -cp | -classpath )
	    shift
	    classpath=$1
	    shift
	    ;;
    -jar )
	     shift
	     jar=$1
	     shift
	     ;;
    -D* )
	  vm_args
	  ;;
	  
    -X* )
	    vm_args
	    ;;

    -XX* )
	     vm_args
	     ;;

    * )
	if [ "$xtra_args" = "" ] ;
	then
	  xtra_args=$1
	else
	  xtra_args="$xtra_args $1"
	fi
	shift
	;;
  esac
done

if [ "$jar" == "" ] ;
then
  cp="-classpath $classpath"
else
  cp="-jar $jar"
fi

extra="$vmargs $vmalloc $cp $xtra_args"
xm create -c xmconfigs/domain_config_generic extra="$extra" name=GuestVM-${USER}
