# A script that extends the Maxine "max" script to allow Guest VM to be built
# Author: Mick Jordan

pushd .. >/dev/null
extra_projects_dir=`pwd`
popd >/dev/null

extra_projects=( \
  GuestVMBase:src \
  MaxineELF:src \
  JNodeFS:src \
  YANFS:src \
  GNUCP:src \
  GuestVMJDK:src \
  GuestVM:src,test \
)

image_override=1
vm_override=1
prefix_classpath=""
specfile=""

function run_image_override() {
  echo "build guestvm image"
  pushd ../../guk  >/dev/null
  gmake
  popd  >/dev/null
  run ${jvm_exe} -cp ${extra_cp} com.sun.max.vm.prototype.GuestVMBootImageGenerator -trace=1 $prefix_classpath $specfile $@
}

function run_vm_override() {
  echo "vm_override $vm_args"
  . run $vm_args
}

while [ "${1:0:1}" = "-" ]; do
    case $1 in
    -prefixclasspath )
      shift
      prefix_classpath="-prefixclasspath=$1"
      ;;
    -specfile )
      shift
      specfile="-specfile=$1"
      ;;
    esac
    shift
done
. ../../maxine/bin/max $@
