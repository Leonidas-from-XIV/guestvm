if [ -z "$HADOOP_DIR" ] ;
then
  echo "HADOOP_DIR must be set"
  exit 1
fi

jh=${JAVA_HOME##*/}

bin/run -echo -J-Dguestvm.process.filterclasses=com.sun.guestvm.process.HadoopProcessFilters -J-Djava.home=/guestvm/java/$jh/jre -J-Duser.home=$HADOOP_DIR "-J-Dguestvm.fs.table=ext2:/blk/0:/guestvm/java:ro;ext2:/blk/1:$HADOOP_DIR;ext2:/blk/2:/scratch" -J-Dhadoop.root.logger=INFO,console -J-Duser.name=acme -J-Dhadoop.home.dir=$HADOOP_DIR -J-Duser.dir=$HADOOP_DIR -J-Dguestvm.groups=acme -classpath $HADOOP_DIR/conf:/guestvm/java/$jh/lib/tools.jar:$HADOOP_DIR:$HADOOP_DIR/hadoop-0.18.3-core.jar:$HADOOP_DIR/lib/commons-cli-2.0-SNAPSHOT.jar:$HADOOP_DIR/lib/commons-codec-1.3.jar:$HADOOP_DIR/lib/commons-httpclient-3.0.1.jar:$HADOOP_DIR/lib/commons-logging-1.0.4.jar:$HADOOP_DIR/lib/commons-logging-api-1.0.4.jar:$HADOOP_DIR/lib/commons-net-1.4.1.jar:$HADOOP_DIR/lib/jets3t-0.6.0.jar:$HADOOP_DIR/lib/jetty-5.1.4.jar:$HADOOP_DIR/lib/junit-3.8.1.jar:$HADOOP_DIR/lib/kfs-0.1.3.jar:$HADOOP_DIR/lib/log4j-1.2.15.jar:$HADOOP_DIR/lib/oro-2.0.8.jar:$HADOOP_DIR/lib/servlet-api.jar:$HADOOP_DIR/lib/slf4j-api-1.4.3.jar:$HADOOP_DIR/lib/slf4j-log4j12-1.4.3.jar:$HADOOP_DIR/lib/xmlenc-0.52.jar:$HADOOP_DIR/lib/jetty-ext/commons-el.jar:$HADOOP_DIR/lib/jetty-ext/jasper-compiler.jar:$HADOOP_DIR/lib/jetty-ext/jasper-runtime.jar:$HADOOP_DIR/lib/jetty-ext/jsp-api.jar $*
