# Variant that supports tracing with AspectJ
#
debug=""
logfile=trace.log
logtype=TBSB
off=""
cp=""
agent=""
logging_config=""

if [ -z "${ASPECTJ_HOME}" ]; then
  echo "ASPECTJ_HOME must be set"
  exit 1
fi

aspectj_ver=${ASPECTJ_HOME##*/}

echo=""
while [ "$1" != "" ] ;
do
  case "$1" in
    "-d" )
      debug="-d"
      ;;
    "-logfile")
      shift
      logfile=$1
      ;;
    "-logtype")
      shift
      logtype=$1
      ;;
    "-logaj")
      logging_config="-J-Djava.util.logging.config.file=/scratch/logging.properties"
      ;;
    "-off")
      off="-J-Dguestvm.ajtrace.off"
      logtype="Null"
      ;;
    "-agent")
      agent="-J-javaagent:/guestvm/aspectj/${aspectj_ver}/lib/aspectjweaver.jar"
      ;;
    "-cp")
      shift
      cp="-cp $1"
      ;;
    "-echo" )
      echo="-echo"
      ;;
      *)
      break
      ;;
  esac
  shift
done

bin/run_fs $debug $echo -mount /guestvm/aspectj $agent -J-Xbootclasspath/p:/guestvm/aspectj/$aspectj_ver/lib/aspectjrt.jar $logging_config $cp -J-Dguestvm.ajtrace.timing -J-Dguestvm.ajtrace.cputime  -J-Dguestvm.ajtrace.logfile=/scratch/$logfile $off $logaj -J-Dguestvm.ajtrace.logclass=com.sun.guestvm.ajtrace.AJTraceLog${logtype} $*
