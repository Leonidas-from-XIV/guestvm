# This script runs the Maxine Inspector agent

GUESTVM_ROOT=`dirname $PWD`
WS_ROOT=`dirname $GUESTVM_ROOT`

MAX=$WS_ROOT/maxine

echocmd=0
port=""
impl="DB"
trace=""
javacmd=`which java`

while [ "$1" != "" ];
do
  case $1 in
  "-echo" )
    echocmd=1
    ;;
  "-port" )
    shift
    port="-port=$1"
    ;;
  "-db" )
    ;;
  "-xg" )
    impl="XG"
    ;;
  "-trace" )
    shift
    trace="-trace=$1"
    ;;
  "-java" )
    shift
    javacmd="$1"
    ;;
  * )
    break
    ;;
  esac
  shift
done


classpath=$GUESTVM_ROOT/GuestVMTele/bin:$MAX/Inspector/bin:$MAX/Tele/bin:$MAX/VMDI/bin:$MAX/VM/bin:$MAX/Base/bin

cmd="$javacmd -cp $classpath com.sun.max.tele.channel.agent.InspectorAgent $port -os=GuestVM -os.sub=$impl $trace $*"

if [ "$echocmd" -eq 1 ] ;
then
  echo "$cmd"
fi

$cmd
