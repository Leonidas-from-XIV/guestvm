# This script runs the Maxine inspector (on Linux).
#
CWD=`basename $PWD`
if [ "$CWD" != "GuestVMNative" ];
then
  echo "cwd is not in GuestVMNative package"
  exit 1
fi

OS=GUESTVM
GUESTVM_ROOT=`dirname $PWD`
WS_ROOT=`dirname $GUESTVM_ROOT`

echocmd=0
id=""
run=1
trace=1
dialog=""
commandfilearg=""
cp=""
cpb=""
vmargs=""
javacmd=`which java`
mode="attachwaiting"
target=""
location=""

while [ "$1" != "" ];
do
#  echo $1
  case $1 in
  "-echo" )
    echocmd=1
    ;;
  "-norun" )
    run=0
    echocmd=1;
    ;;
  "-trace" )
    shift
    trace="$1"
    ;;
  "-c" )
    shift
    commandfilearg="-c=$1"
    ;;
  "-xvm" )
    xvm=1
    ;;
  "-id" )
    shift
    id="-id=$1"
    ;;
  "-classpath" | "-cp" )
    shift
    cp="$1"
    ;;
  "-cpb" )
    shift
    cpb=$1
    ;;
  -J* )
    if [ "$vmargs" = "" ] ;
    then
      vmargs=${1/-J/}
    else
      vmargs="$vmargs ${1/-J/}"
    fi
    ;;
  "-java" )
    shift
    javacmd=$1
    ;;
    
  -tcp* )
    type=${1/-/}
    shift
    target="remote"
    location=$1
    if [ $type = "tcp.xga" ] ;
    then
        mode="attach"
    fi
    ;;
  "-dump" )
    shift
    mode="attach"
    target="file"
    location=$1
    ;;
  "-view" )
    mode="image"
    ;;
  * )
    ;;
  esac
  shift
done

BUILD_WS_ROOT="$WS_ROOT"
INS_WS_ROOT="$WS_ROOT"
IMAGE_WS_ROOT="$WS_ROOT"
MAX=$INS_WS_ROOT/maxine

classpath=$MAX/Inspector/bin:$MAX/Inspector/jlfgr-1_0.jar:$MAX/Tele/bin:$MAX/VMDI/bin:$MAX/VM/bin:$MAX/Base/bin:$MAX/Assembler/bin:$MAX/CPS/bin:$MAX/CRI/bin:$MAX/C1X/bin:$MAX/C0X/bin:$MAX/MaxineELF/bin:$GUESTVM_ROOT/GuestVMTele/bin:$GUESTVM_ROOT/GuestVM/bin:$GUESTVM_ROOT/GuestVMBase/bin:$GUESTVM_ROOT/JNodeFS/bin:$GUESTVM_ROOT/YANFS/bin:$GUESTVM_ROOT/NFSServer/bin:$GUESTVM_ROOT/GNUCP/bin
if [ "$cp" != "" ] ;
then
  classpath=${classpath}:$cp
fi
if [ "$cpb" != "" ] ;
then
  classpath=${cpb}:${classpath}
fi
cmd="$javacmd -d64 $vmargs -Xbootclasspath/a:$GUESTVM_ROOT/GuestVMJDK/bin -classpath $classpath -Dmax.os=GuestVM -Dmax.os.signalcount=0 -Xms512m -Xmx1024m  com.sun.max.ins.MaxineInspector $id -trace=$trace -vmdir=$IMAGE_WS_ROOT/maxine/Native/generated/guestvm $commandfilearg -mode=$mode -target=$target -location=$location"

if [ "$echocmd" -eq 1 ] ;
then
  echo "$cmd"
fi

if [ "$run" -eq 1 ] ;
then
  $cmd
fi

exit 0
