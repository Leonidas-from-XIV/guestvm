# Runs an NFS server on all the file systems 
#
mount="/hadoop"
debug=""
echo=""
vmargs=""
while [ "$1" != "" ] ;
do
  case "$1" in
    "-d" )
      debug="-d"
      ;;
    "-mount")
      shift
      mount=$1
      ;;
    "-echo" )
      echo="-echo"
      ;;
  -J* )
    if [ "$vmargs" = "" ] ;
    then
      vmargs=${1}
    else
      vmargs="$vmargs ${1}"
    fi
    ;;
    *)
      break
      ;;
  esac
  shift
done

jh=${JAVA_HOME##*/}

bin/run $echo $debug $vmargs -J-Djava.home=/guestvm/java/$jh/jre "-J-Dguestvm.fs.table=ext2:/blk/0:/guestvm/java:ro;ext2:/blk/1:${mount};ext2:/blk/2:/scratch" "-J-Dguestvm.nfs.exports=/guestvm/java:/guestvm/exports/java;${mount}:/guestvm/export/${mount};/scratch:/guestvm/exports/scratch" -J-Xbootclasspath/a:/guestvm/java/nfs_server/bin com.sun.guestvm.fs.nfs.NfsServer $*
