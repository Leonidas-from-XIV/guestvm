# Guest VM is a Java virtual machine, so we provide a "java" launch command.
# However, some users may find the "run" command easier to work with.

# Version for TCK that sets up the TCK virtual disk and java.home

vmargs="-Dguestvm.fs.table=ext2:/blk/0:/guestvm/java:ro;ext2:/blk/1:/guestvm/tck -Djava.home=/guestvm/java/jdk1.6.0_11/jre"

jar=""
classpath=$CLASSPATH
vmalloc="-XX:+UseVirtualMemory"

# Resolve location of this script
me="${BASH_SOURCE[0]}"
while [ -h "$me" ]; do
    me=`readlink -e "$me"`
done
# this assumes this script is in bin that is a sibling of xmconfigs
parent=`dirname $me`
parent=`dirname $parent`
# ensure absolute
parent=`cd $parent; pwd`
if [ ! -d $parent/xmconfigs ] ; then
  echo "no xmconfigs directory in $parent"
  exit 1
fi

guestvmdir="-Dguestvm.dir=$parent"

function vm_args() {
    shift
    if [ "$vmargs" = "" ] ;
    then
      vmargs="$1"
    else
      vmargs="$vmargs $1"
    fi
    shift
}

while [ "$1" != "" ] ;
do
  case "$1" in
    -cp | -classpath )
      shift
      classpath=$1
      ;;
    -jar )
      shift
      jar=$1
      ;;
    -D* | -X* | -XX* )
      if [ "$vmargs" = "" ] ;
      then
        vmargs=${1}
       else
        vmargs="$vmargs ${1}"
      fi
      ;;
    * )
      break
      ;;
  esac
  shift
done

if [ "$jar" == "" ] ;
then
  if [ "$classpath" != "" ] ;
  then
    cp="-classpath $classpath"
  fi
else
  cp="-jar $jar"
fi

extra="$vmargs $vmalloc $guestvmdir $cp $*"
if [ ${#extra} -ge 1023 ] ; then
  echo "Xen limitation: extra argument is too long"
  exit 1
fi
export IMAGE_DIR=$parent
xm create -c $parent/xmconfigs/domain_config_generic extra="$extra" name=GuestVM-${USER}-$$
