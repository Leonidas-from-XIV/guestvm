# Guest VM is a Java virtual machine, so we provide a "java" launch command.
# However, some users may find the "run" command easier to work with.

# This script sets up java.home to the ext2 disk0 directory implied by JAVA_HOME

jh=${JAVA_HOME##*/}
jar=""
classpath=$CLASSPATH
vmalloc="-XX:+UseVirtualMemory"
gukargs=""
ramdisk=""
javahome="-Djava.home=/guestvm/java/$jh/jre"

# Resolve location of this script
me="${BASH_SOURCE[0]}"
while [ -h "$me" ]; do
    me=`readlink -e "$me"`
done
# this assumes this script is in bin that is a sibling of xmconfigs
parent=`dirname $me`
parent=`dirname $parent`
# ensure absolute
parent=`cd $parent; pwd`
if [ ! -d $parent/xmconfigs ] ; then
  echo "no xmconfigs directory in $parent"
  exit 1
fi

vmargs="$vmalloc $javahome -Dguestvm.dir=$parent -Dguestvm.pid=$$"

while [ "$1" != "" ] ;
do
  case "$1" in
    -cp | -classpath )
      shift
      classpath=$1
      ;;
    -jar )
      shift
      jar=$1
      ;;
    -XX:GUK* )
      if [ "$gukargs" = "" ] ;
      then
        gukargs=${1}
      else
        gukargs="$gukargs ${1}"
      fi
      ;;
    -D* | -X* | -XX* )
      if [ "$vmargs" = "" ] ;
      then
        vmargs=${1}
       else
        vmargs="$vmargs ${1}"
      fi
      ;;
    * )
      break
      ;;
  esac
  shift
done

if [ "$jar" == "" ] ;
then
  if [ "$classpath" != "" ] ;
  then
    cp="-classpath $classpath"
  fi
else
  cp="-jar $jar"
fi

name=GuestVM-${USER}-$$
javaxtra=$vmargs $cp $*"
extra="$gukargs $javaxtra"
if [ ${#extra} -ge 1023 ] ; then
  argsfile=".$name-args"
  echo "${#javaxtra}" > $argsfile
  echo $javaxtra >> $argsfile
  extra="$gukargs -XX:GVMRamArgs"
  ramdisk="ramdisk=$argsfile"
fi
export IMAGE_DIR=$parent
#echo /usr/sbin/xm create -c $parent/xmconfigs/domain_config_generic extra="$extra" name=$name $ramdisk
/usr/sbin/xm create -c $parent/xmconfigs/domain_config_generic extra="$extra" name=$name $ramdisk
