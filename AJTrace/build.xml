<project default="all"
    xmlns:aspectj="antlib:org.aspectj"
>
    <property environment="env"/>
    <property name="src" location="src"/>
    <property name="aspectjlib" location="${env.ASPECTJ_HOME}/lib"/>
    <property name="classes" location="bin"/>

    <!-- Classpath required for building -->
    <path id="classpath">
    	<pathelement location="${classes}"/>
        <pathelement location="${aspectjlib}/aspectjrt.jar"/>
    </path>

    <target name="all" depends="compile"/>

    <target name="init">
        <mkdir dir="${lib}"/>
        <mkdir dir="${classes}"/>
    </target>

    <target name="compile" depends="init">
        <aspectj:iajc
            destdir="${classes}"
            sourceroots="${src}"
        	source="1.5">
            <classpath refid="classpath"/>
        </aspectj:iajc>
    </target>

    <target name="clean">
        <delete dir="${classes}"/>
      </target>

</project>
