# A script that extends the Maxine "max" script to allow Maxine VE to be built
# Author: Mick Jordan

pushd .. >/dev/null
extra_projects_dir=`pwd`
popd >/dev/null

extra_projects=( \
  VEBase:src \
  JNodeFS:src \
  YANFS:src \
  GNUCP:src \
  VEJDK:src \
  NFSServer:src \
  VEMain:src,test \
  VETele:src \
)

image_override=1
vm_override=1
prefix_classpath=""
specfile=""
imageargs=""
cps="-opt=com.sun.max.vm.cps.b.c.d.e.amd64.target.AMD64CPSCompiler"

function run_image_override() {
  echo "build Maxine Virtual Edition image"
  pushd ../../guk  >/dev/null
  gmake
  popd  >/dev/null
  run ${jvm_exe} -cp ${extra_project_cp} com.sun.max.vm.hosted.VEBootImageGenerator -trace=1 $prefix_classpath $specfile $imageargs $@
}

function run_vm_override() {
  echo "vm_override $vm_args"
  . run $vm_args
}

while [ "${1:0:1}" = "-" ]; do
    case $1 in
    -prefixclasspath )
      shift
      prefix_classpath="-prefixclasspath=$1"
      ;;
    -specfile )
      shift
      specfile="-specfile=$1"
      ;;
    -imageargs )
      shift
      if [ "$imageargs" = "" ] ;
      then
        imageargs="-maxineimageargs=$1"
      else
        imageargs="$imageargs $1"
      fi
      ;;
    -cps )
      if [ "$imageargs" = "" ] ;
      then
        imageargs="-maxineimageargs=$cps"
      else
        imageargs="$imageargs $cps"
      fi
      ;;
    -* )
      break
      ;;
    esac
    shift
done
. ../../maxine/bin/max $@
