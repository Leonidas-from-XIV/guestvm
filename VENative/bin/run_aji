# Variant that supports tracing with AspectJ in the image file system
#
debug=""
logfile=ajtrace.log
logtype=TBSB
off=""
cp=""
agent=""
logging_config=""

if [ -z "${ASPECTJ_HOME}" ]; then
  echo "ASPECTJ_HOME must be set"
  exit 1
fi

aspectj_ver=${ASPECTJ_HOME##*/}
aspectj_root=/maxve/image/$aspectj_ver
mount="/user"

echo=""
while [ "$1" != "" ] ;
do
  case "$1" in
    "-d" )
      debug="-d"
      ;;
    "-mount")
      shift
      mount=$1
      ;;
    "-logfile")
      shift
      logfile=$1
      ;;
    "-logtype")
      shift
      logtype=$1
      ;;
    "-logaj")
      logging_config="-J-Djava.util.logging.config.file=/scratch/logging.properties"
      ;;
    "-off")
      off="-J-Dajtrace.off"
      logtype="Null"
      ;;
    "-agent")
      agent="-J-javaagent:$aspectj_root/lib/aspectjweaver.jar"
      ;;
    "-cp")
      shift
      cp="-cp $1"
      ;;
    "-echo" )
      echo="-echo"
      ;;
      *)
      break
      ;;
  esac
  shift
done

jh=${JAVA_HOME##*/}

bin/run $echo $debug -J-Djava.home=/maxve/image/$jh/jre "-J-Dmax.ve.fs.table=ext2:/blk/1:${mount};sg:/exports:/sg" $agent -J-Xbootclasspath/p:$aspectj_root/lib/aspectjrt.jar $logging_config $cp -J-Dajtrace.timing -J-Dajtrace.cputime  -J-Dajtrace.logfile=/sg/$logfile $off $logaj -J-Dajtrace.logclass=com.sun.max.ajtrace.AJTraceLog${logtype} $*
