# Variant that supports tracing with AspectJ
#
debug=""
logfile=trace.log
logtype=TBSB
wall=""
cpu=""
off=""
args=""
plargs=""
cp=""
agent=""
logging_config=""
vmargs=""

if [ -z "${ASPECTJ_HOME}" ]; then
  echo "ASPECTJ_HOME must be set"
  exit 1
fi

aspectj_ver=${ASPECTJ_HOME##*/}

echo=""
while [ "$1" != "" ] ;
do
  case "$1" in
    "-d" )
      debug="-d"
      ;;
    -J* )
    if [ "$vmargs" = "" ] ;
    then
      vmargs=$1
    else
      vmargs="$vmargs $1"
    fi
      ;;
    "-logfile")
      shift
      logfile=$1
      ;;
    "-logtype")
      shift
      logtype=$1
      ;;
    "-logaj")
      logging_config="-J-Djava.util.logging.config.file=/scratch/logging.properties"
      ;;
    "-wall" )
      wall="-J-Dajtrace.timing"
      ;;
    "-cpu" )
     cpu="-J-Dajtrace.cputime"
      ;;
    "-off")
      off="-J-Dajtrace.off"
      logtype="Null"
      ;;
    "-args" )
     args="-J-Dajtrace.args"
      ;;
    "-plargs" )
     plargs="-J-Dajtrace.plainargs"
      ;;
    "-agent")
      agent="-J-javaagent:/maxve/aspectj/${aspectj_ver}/lib/aspectjweaver.jar"
      ;;
    "-cp")
      shift
      cp="-cp $1"
      ;;
    "-echo" )
      echo="-echo"
      ;;
      *)
      break
      ;;
  esac
  shift
done

bin/run_fs $vmargs $debug $echo -mount /maxve/aspectj $agent -J-Xbootclasspath/p:/maxve/aspectj/$aspectj_ver/lib/aspectjrt.jar $logging_config $cp $wall $cpu  $args $plargs -J-Dajtrace.logfile=$logfile $off $logaj -J-Dajtrace.logclass=com.sun.max.ajtrace.AJTraceLog${logtype} $*
