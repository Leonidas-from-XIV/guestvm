# Run WebLogic
#
debug=""
echo=""
vmargs=""
while [ "$1" != "" ] ;
do
  case "$1" in
    "-d" )
      debug="-d"
      ;;
    "-echo" )
      echo="-echo"
      ;;
  -J* )
    if [ "$vmargs" = "" ] ;
    then
      vmargs=${1}
    else
      vmargs="$vmargs ${1}"
    fi
    ;;
    *)
      break
      ;;
  esac
  shift
done

jh=${JAVA_HOME##*/}
wlhome=/wl/weblogic
cp="/maxve/java/$jh/lib/tools.jar:$wlhome/wlserver/server/lib/weblogic_sp.jar:$wlhome/wlserver/server/lib/weblogic.jar:$wlhome/modules/features/weblogic.server.modules_10.3.3.0.jar:$wlhome/wlserver/server/lib/webservices.jar:$wlhome//modules/org.apache.ant_1.7.1/lib/ant-all.jar:$wlhome/modules/net.sf.antcontrib_1.1.0.0_1-0b2/lib/ant-contrib.jar"
envvars="-J-Duser.home=$wlhome -J-Duser.dir=$wlhome -J-Xmx2048m -J-XX:ReservedCodeCacheSize=256m"
bin/run $echo $debug $envvars $vmargs -J-Djava.home=/maxve/java/$jh/jre "-J-Dmax.ve.fs.table=ext2:/blk/0:/maxve/java:ro,auto;ext2:/blk/1:/wl;ext2:/blk/2:/scratch" -cp $cp weblogic.Server $*
