wsroot=`dirname $PWD`
if [ -n "${DISK}" ] ; then
  dfile=$DISK
fi
cp=$wsroot/VEMain/bin:$wsroot/VEBase/bin:$wsroot/VETools/bin:$wsroot/JNodeFS/bin
mc=com.sun.max.ve.tools.ext2.Ext2FileTool
h="-Dmax.ve.logging.handler=com.sun.max.ve.logging.SystemOutHandler -Dmax.ve.logging.level=WARNING"

while [ "$1" != "" ];
do
  case $1 in
    -disk )
      shift
      dfile=$1
      ;;
    -wsroot )
      shift
      wsroot=$1
      cp=$wsroot/VEMain/bin:$wsroot/VEBase/bin:$wsroot/JNodeFS/bin
      ;;
    * )
      break
      ;;
  esac
  shift
done

if [ -z "$dfile" ]; then
  echo "no disk specified, use -disk or set DISK environment variable"
  exit 1
fi

if [ ! -d "$wsroot/VEMain/bin" ] ;
then
  echo "cannot find classes for Ext2FileTool, set -wsroot to directory containing GuestVM projects"
  exit 1;
fi
